<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
	<name>JiExtensionManager</name>
	<creationDate>December 2014</creationDate>
	<author>Jinfinity</author>
	<authorEmail>support@jinfinity.com</authorEmail>
	<authorUrl>http://www.jinfinity.com</authorUrl>
	<copyright>Copyright (C) 2014 Jinfinity</copyright>
	<license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
	<version>3.0.6</version>
	<description>COM_JIEXTENSIONMANAGER_DESC</description>
	<!-- install/uninstall -->
	<scriptfile>script.jiextensionmanager.php</scriptfile>
    <!-- Public front end files -->
    <media folder="media">
        <folder>jiextensionmanager</folder>
    </media>
	<!-- Administrator back-end section -->
	<administration>
		<!-- Administration menu -->
		<menu img="../media/jimigrator/images/icon-16-jiextensionmanager.png">JIEXTENSIONMANAGER</menu>
		<!-- Back-end files -->	
		<files folder="admin">
            <folder>controllers</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>views</folder>
            <filename>config.xml</filename>
			<filename>controller.php</filename>
            <filename>extensions.xml</filename>
			<filename>index.html</filename>
            <filename>jiextensionmanager.php</filename>
		</files>
		<languages folder="admin/language">
            <language tag="en-GB">en-GB/en-GB.com_jiextensionmanager.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_jiextensionmanager.sys.ini</language>
        </languages>
	</administration>
    <config>
        <fieldset name="options" label="JOPTIONS" description="JIEXTENSIONMANAGER_CONFIG_OPTIONS_DESC">
            <field name="dlkey" type="password" autocomplete="false" default="" label="JIEXTENSIONMANAGER_DOWNLOADTOKEN" description="JIEXTENSIONMANAGER_DOWNLOADTOKEN_DESC" size="122" maxlength="122"/>
        </fieldset>
    </config>
</extension>
