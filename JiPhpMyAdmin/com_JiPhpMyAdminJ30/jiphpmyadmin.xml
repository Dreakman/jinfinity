<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
	<name>JiPhpMyAdmin</name>
	<creationDate>July 2014</creationDate>
	<author>Jinfinity</author>
	<authorEmail>support@jinfinity.com</authorEmail>
	<authorUrl>http://www.jinfinity.com</authorUrl>
	<copyright>Copyright (C) 2014 Jinfinity</copyright>
	<license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
	<version>1.0.1</version>
	<description>COM_JIPHPMYADMIN_COM_DESCRIPTION</description>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.com_jiphpmyadmin.ini</language>
		<language tag="en-GB">en-GB/en-GB.com_jiphpmyadmin.sys.ini</language>
	</languages>
	<!-- install/uninstall -->
	<scriptfile>script.jiphpmyadmin.php</scriptfile>
    <!-- Public front end files -->
    <media folder="media">
        <folder>jinfinity</folder>
    </media>
	<!-- Administrator back-end section -->
	<administration>
		<!-- Administration menu -->
		<menu img="components/com_jiphpmyadmin/assets/images/icon-16-jiphpmyadmin.png">COM_JIPHPMYADMIN</menu>
		<!-- Back-end files -->	
		<files folder="admin">
            <folder>assets</folder>
            <folder>controllers</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>phpmyadmin</folder>
            <folder>views</folder>
            <filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>index.html</filename>
            <filename>jiphpmyadmin.php</filename>
		</files>
		<languages folder="admin/language">
            <language tag="en-GB">en-GB/en-GB.com_jiphpmyadmin.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_jiphpmyadmin.sys.ini</language>
        </languages>
	</administration>
</extension>