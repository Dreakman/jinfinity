    <config>
        <fields name="params" addfieldpath="/plugins/system/jiframework/fields">
            <fieldset name="description">
                <field name="@header" type="header" label="JIFORMS" description="JIFORMS_DESC" xml="/plugins/system/jiforms/jiforms.xml"/>
            </fieldset>
            <fieldset name="basic">
            </fieldset>
            <fieldset name="advanced">
                <field name="curlyvar" type="text" default="jiforms" label="PLG_JIFORMS_CURLYVAR_LABEL" description="PLG_JIFORMS_CURLYVAR_DESC"/>
            </fieldset>
        </fields>
	</config>
