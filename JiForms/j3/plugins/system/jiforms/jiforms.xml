    <description>PLG_SYSTEM_JIFORMS_DESC</description>

    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.plg_system_jiforms.ini</language>
        <language tag="en-GB">en-GB/en-GB.plg_system_jiforms.sys.ini</language>
    </languages>
    <media folder="media">
        <folder>jiforms</folder>
    </media>
	<files>
		<filename plugin="jiforms">jiforms.php</filename>
		<filename>jiforms.xml</filename>
		<filename>index.html</filename>
